#include <stdio.h>
#include <ctype.h>

int main()
{
    char ch;
    printf("\n print any key:");
    scanf("%c",&ch);
    if(isalpha(ch)>0)
    printf("\n the user has entered a character");
    if(isdigit(ch)>0)
    printf("\n the user has entered a digit");
    if(isprint(ch)>0)
    printf("\n the user has entered a printable character");
    if(isspace(ch)>0)
    printf("\n the user has entered a space character");
    if(ispunct(ch)>0)
    printf("\n the user has entered a punctuation mark");
    if (islower(ch))
    printf("\n the entered character is in lower case. In upper case it is: %c", toupper(ch));
    if (isupper(ch))
    printf("\n the entered character is in upper case. In lowe case it is: %c", tolower(ch));
    
    return 0;
    }
